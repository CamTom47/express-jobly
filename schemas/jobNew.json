{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "New Job Schema",
    "required": [
        "title",
        "company_handle"
    ],
    "properties": {
            "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
        },
        "salary": {
            "type": "Integer",
            "minimum": 0
        },
        "equity": {
            "type": "Number",
            "pattern": "0|(0?\\.[0-9]+)"
        },
        "company_handle": {
            "type": "string",
            "title": "The company_handle Schema"
        }
    }
}